    <modelVersion>4.0.0</modelVersion>
    <groupId>com.ferzerkerx</groupId>
    <artifactId>AlbumFinder</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>jar</packaging>
    <name>AlbumFinder</name>
